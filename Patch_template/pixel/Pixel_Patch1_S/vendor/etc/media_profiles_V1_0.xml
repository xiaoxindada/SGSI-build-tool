        </EncoderProfile>

        <!-- timelapse_720p: 1280 x 720 30fps -->
        <EncoderProfile quality="timelapse720p" fileFormat="mp4" duration="30">
            <Video codec="h264"
                   bitRate="12000000"
                   width="1280"
                   height="720"
